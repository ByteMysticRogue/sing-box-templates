{
    "log": {
        "disabled": false,
        "level": "debug",
        "output": "/etc/sing-box/box.log",
        "timestamp": true
    },
    "dns": {
        "servers": [
            {
                "tag": "dns-remote",
                "address": "https://dns.adguard-dns.com/dns-query",
                "address_resolver": "dns-local",
                "detour": "direct",
                "address_strategy": "ipv4_only"
            },
            {
                "address": "local",
                "detour": "direct",
                "tag": "dns-local"
            },
            {
                "tag": "block",
                "address": "rcode://success"
            }
        ],
        "strategy": "ipv4_only",
        "final": "dns-remote",
        "reverse_mapping": true
    },
    "experimental": {
        "cache_file": {
            "enabled": true,
            "path": "",
            "cache_id": "",
            "store_fakeip": false
        }
    },
    "inbounds": [

        // add your inbound (vless, vmess, etc)

    ],
    "outbounds": [

        // wireguard outbound
        
        {
            "server": "engage.cloudflareclient.com",
            "server_port": 2408,
            "local_address": [
                "172.16.0.2/32",
                "2606:4700:110:81d0:a1dc:7e2d:b127:b381/128"
            ],
            "private_key": "",
            "peer_public_key": "",
            "reserved": [
                0,
                0,
                0
            ],
            "tag": "wg",
            "type": "wireguard"
        },
        {
            "type": "direct",
            "tag": "direct"
        },
        {
            "type": "block",
            "tag": "block"
        },
        {
            "type": "dns",
            "tag": "dns-out"
        }
    ],
    "route": {
        "final": "wg",
        "rules": [
            {
                "protocol": "dns",
                "outbound": "dns-out"
            },
            {
                "ip_is_private": true,
                "outbound": "block"
            },
            {
                "type": "logical",
                "mode": "or",
                "rules": [
                    {
                        "network": "udp",
                        "port_range": [
                            "1024:65534"
                        ]
                    },
                    {
                        "network": "tcp",
                        "port": [
                            25,
                            587,
                            465,
                            2525
                        ],
                        "outbound": "block"
                    },
                    {
                        "protocol": "quic",
                        "port": 443
                    },
                    {
                        "source_ip_cidr": [
                            "224.0.0.0\/3",
                            "ff00::\/8"
                        ]
                    },
                    {
                        "ip_cidr": [
                            "224.0.0.0\/3",
                            "ff00::\/8",
                            "0.0.0.0/8",
                            "10.0.0.0/8",
                            "100.64.0.0/10",
                            "127.0.0.0/8",
                            "169.254.0.0/16",
                            "172.16.0.0/12",
                            "192.0.0.0/24",
                            "192.0.2.0/24",
                            "192.168.0.0/16",
                            "198.18.0.0/15",
                            "198.51.100.0/24",
                            "203.0.113.0/24",
                            "::1/128",
                            "fc00::/7",
                            "fe80::/10"
                        ]
                    }
                ],
                "outbound": "block"
            },
            {
                "domain_suffix": [
                    ".ir"
                ],
                "outbound": "block"
            },
            {
                "rule_set": [
                    "geosite-category-ads-all",
                    "geosite-malware",
                    "geosite-phishing",
                    "geosite-cryptominers",
                    "geosite-ir",
                    "geosite-cn"
                ],
                "outbound": "block"
            },
            {
                "rule_set": [
                    "geoip-ir",
                    "geoip-ru",
                    "geoip-cn",
                    "geoip-malware",
                    "geoip-phishing"
                ],
                "outbound": "block"
            }
        ],
        "rule_set": [
            {
                "tag": "geosite-ir",
                "type": "remote",
                "format": "binary",
                "url": "https://raw.githubusercontent.com/Chocolate4U/Iran-sing-box-rules/rule-set/geosite-ir.srs",
                "download_detour": "direct",
                "update_interval": "1d"
            },
            {
                "tag": "geosite-category-ads-all",
